<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="Blog\Entity\BlogPost" table="blog_posts">
        <id name="id" column="id" type="string" length="36"/>
        <field name="title" column="title" type="string" length="1024" nullable="true" />
        <field name="post" column="post" type="string" length="1024" />
        <many-to-one target-entity="Authentication\Entity\User" field="user">
            <join-column name="user_id" referenced-column-name="email_address" nullable="false" />
        </many-to-one>
    </entity>
</doctrine-mapping>
