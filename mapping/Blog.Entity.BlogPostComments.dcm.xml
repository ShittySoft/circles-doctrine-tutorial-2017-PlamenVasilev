<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="Blog\Entity\BlogPostComments" table="blog_posts_comments">
        <id name="id" column="id" type="string" length="36"/>
        <field name="comment" column="comment" type="text"/>
        <field name="createdAt" column="created_at" type="datetime" />
        <many-to-one target-entity="Authentication\Entity\User" field="author">
            <join-column name="author_id" referenced-column-name="email_address" nullable="false"/>
        </many-to-one>
        <many-to-one target-entity="Blog\Entity\BlogPost" field="blogPost" inversed-by="comments">
            <join-column
        </many-to-one>
    </entity>
</doctrine-mapping>
